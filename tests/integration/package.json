{
  "name": "webordinary-integration-tests",
  "version": "1.0.0",
  "description": "Integration tests for Webordinary live-editing platform",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:integration": "jest --config=jest.integration.config.js",
    "test:infrastructure": "jest scenarios/infrastructure-validation.test.ts",
    "test:cold-start": "jest scenarios/01-cold-start-session-flow.test.ts",
    "test:persistence": "jest scenarios/02-session-persistence.test.ts",
    "test:concurrent": "jest scenarios/03-concurrent-sessions.test.ts",
    "test:s3": "jest scenarios/04-s3-deployment.test.ts",
    "test:resumption": "jest scenarios/05-session-resumption.test.ts",
    "test:all": "jest scenarios/*.test.ts",
    "dev": "ts-node src/index.ts"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch": "^3.485.0",
    "@aws-sdk/client-cloudwatch-logs": "^3.864.0",
    "@aws-sdk/client-ecs": "^3.485.0",
    "@aws-sdk/client-efs": "^3.485.0",
    "@aws-sdk/client-elastic-load-balancing-v2": "^3.485.0",
    "@aws-sdk/util-dynamodb": "^3.485.0",
    "node-fetch": "^3.3.2",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.864.0",
    "@aws-sdk/client-s3": "^3.864.0",
    "@aws-sdk/client-sqs": "^3.864.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.8",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "type": "module",
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "testEnvironment": "node",
    "testTimeout": 300000,
    "setupFilesAfterEnv": [
      "<rootDir>/src/setup-tests.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}
