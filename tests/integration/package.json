{
  "name": "webordinary-integration-tests",
  "version": "1.0.0",
  "description": "Integration tests for Webordinary live-editing platform",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:integration": "jest --config=jest.integration.config.js",
    "test:cold-start": "jest --testNamePattern='Cold Start'",
    "test:persistence": "jest --testNamePattern='Session Persistence'",
    "test:concurrency": "jest --testNamePattern='Concurrent Sessions'",
    "test:routing": "jest --testNamePattern='ALB Routing'",
    "test:resilience": "jest --testNamePattern='Failure Recovery'",
    "dev": "ts-node src/index.ts"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch": "^3.485.0",
    "@aws-sdk/client-dynamodb": "^3.485.0",
    "@aws-sdk/client-ecs": "^3.485.0",
    "@aws-sdk/client-efs": "^3.485.0",
    "@aws-sdk/client-elastic-load-balancing-v2": "^3.485.0",
    "@aws-sdk/util-dynamodb": "^3.485.0",
    "node-fetch": "^3.3.2",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.8",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "type": "module",
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [".ts"],
    "testEnvironment": "node",
    "testTimeout": 300000,
    "setupFilesAfterEnv": ["<rootDir>/src/setup-tests.ts"],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}
